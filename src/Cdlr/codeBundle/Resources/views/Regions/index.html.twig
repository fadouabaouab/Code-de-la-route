{%extends "CdlrcodeBundle::layout.html.twig" %}
{% block content %} 
    <div align="center">
    <h1>Regions list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Longitude</th>
                <th>Laltitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('regions_show', { 'id': entity.id }) }}">{{ entity.nom }}</a></td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.laltitude }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('regions_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('regions_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('regions_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
    {% endblock %}
