{%extends "CdlrcodeBundle::layout.html.twig" %}
{% block content %}
    <div align="center">
    <h1>RendezVous list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rendezvous_show', { 'id': entity.rdvId }) }}">{{ entity.date }}</a></td>
                <td>{{ entity.time }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('rendezvous_show', { 'id': entity.rdvId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('rendezvous_edit', { 'id': entity.rdvId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('rendezvous_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
    {% endblock %}
