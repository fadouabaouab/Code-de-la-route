{%extends "CdlrcodeBundle::layout.html.twig" %}
{% block content %}
    <div align="center">
    <h1>Notification list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Message</th>
                <th>Time</th>
                <th>Iddestination</th>
                <th>Typedestination</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('notification_show', { 'id': entity.id }) }}">{{ entity.message }}</a></td>
                <td>{{ entity.time }}</td>
                <td>{{ entity.idDestination }}</td>
                <td>{{ entity.typeDestination }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('notification_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('notification_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('notification_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    </div>
    {% endblock %}
