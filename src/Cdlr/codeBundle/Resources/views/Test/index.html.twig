{%extends "CdlrcodeBundle::layout.html.twig" %}
{% block content %}
    <div align="center">
    <h1>Test list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('test_show', { 'id': entity.testId }) }}">{{ entity.nom }}</a></td>
                <td>{{ entity.type }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('test_show', { 'id': entity.testId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('test_edit', { 'id': entity.testId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('test_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
    {% endblock %}
