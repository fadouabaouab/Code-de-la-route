{%extends "CdlrcodeBundle::layout.html.twig" %}
{% block content %}
        <div align="center">

    <h1>Review list</h1>

    <table class="records_list" border="1">
        <thead>
            <tr>
                <th>Note</th>
                <th>Nbrvote</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('review_show', { 'id': entity.id }) }}">{{ entity.note }}</a></td>
                <td>{{ entity.nbrVote }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('review_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('review_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('review_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
        </div>
    {% endblock %}
